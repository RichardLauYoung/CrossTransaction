@{
    ViewData["Title"] = "Home Page";
}


    <div class="jumbotron">
        <h1>Contoso University</h1>
    </div>
    <div class="row">

        <div class="col-md-4">
            <h2>RMB</h2>
            <p><input type="text" value="" name="AmountRMB" id="AmountRMB" data-val="true" class="form-control"></p>
        </div>
        <div class="col-md-1">
            <h2 ><i class="icon-exchange icon-large"></i></h2>
            <p>
                <a class="btn btn-default" href="http://www.asp.net/mvc/tutorials/getting-started-with-ef-using-mvc/"> <i class="icon-legal icon-large"></i></a>
                </p>
        </div>
        <div class="col-md-4">
            <h2>USD</h2>
            <p><input type="text" value="" name="AmountUSD" id="AmountUSD" data-val="true" class="form-control"></p>
        </div>
    </div>
<div class="row">
    <div class="form-group">
        <label for="APIKey" class="col-md-2 control-label">APIKey</label>
        <div class="col-md-10">
            <input type="text" value="" name="APIKey" id="APIKey" data-val-required="API Key 字段是必需的。"  data-val="true" class="form-control">
            <span data-valmsg-replace="true" data-valmsg-for="APIKey" class="text-danger field-validation-valid"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="APISecret" class="col-md-2 control-label">APISecret</label>
        <div class="col-md-10">
            <input type="text" value="" name="APISecret" id="APISecret" data-val-required="API Secret 字段是必需的。" data-val="true" class="form-control">
            <span data-valmsg-replace="true" data-valmsg-for="APISecret" class="text-danger field-validation-valid"></span>
        </div>
    </div>
</div>
